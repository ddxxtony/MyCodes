<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ellui.interfaz2.EditaResp"
    tools:showIn="@layout/activity_edita_resp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="303dp"
        android:layout_height="299dp"
        app:srcCompat="@drawable/doctor"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="107dp"
        android:layout_marginTop="54dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="107dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="353dp"
        android:layout_height="61dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="58dp"
        android:layout_marginTop="60dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        android:layout_marginLeft="58dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginBottom="26dp"
        android:text="Responsable a editar"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/spinner"
        app:layout_constraintLeft_toLeftOf="@+id/spinner"
        app:layout_constraintRight_toRightOf="@+id/spinner"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="356dp"
        android:layout_height="74dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/spinner"
        android:id="@+id/textInputLayout2"
        android:layout_marginLeft="0dp">

        <EditText
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nombre del Responsable" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="354dp"
        android:layout_height="74dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textInputLayout2"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayout2"
        tools:layout_editor_absoluteY="275dp"
        tools:layout_editor_absoluteX="469dp"
        app:layout_constraintHorizontal_bias="0.0">

        <EditText
            android:id="@+id/correo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Correo del responsable" />
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>
